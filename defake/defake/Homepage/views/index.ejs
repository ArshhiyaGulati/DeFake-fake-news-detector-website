<!-- ============================
     RECENT FLAGGED NEWS
=============================== -->
<section class="verdicts">
  <h2>Recently Flagged News</h2>

  <div class="verdict-tags">
    <button>Trending</button>
    <button>Fake News</button>
    <button>View All</button>
  </div>

  <div class="verdict-cards">
    <% const flaggedNews = [
      { 
        image: "https://images.unsplash.com/photo-1514065549995-7706f6017a27?w=400",
        title: "Claim: Aliens spotted in London",
        verdict: "FAKE",
        explanation: "The viral image was digitally manipulated and debunked by experts."
      },
      { 
        image: "https://images.unsplash.com/photo-1623682687938-515344908afe?w=400",
        title: "Claim: COVID-19 vaccine alters DNA",
        verdict: "FAKE",
        explanation: "Scientific consensus confirms mRNA vaccines do not alter DNA."
      },
      { 
        image: "https://images.unsplash.com/photo-1567965178128-abb8d8532ae7?w=400",
        title: "Claim: US Election was rigged",
        verdict: "FAKE",
        explanation: "Multiple investigations found no widespread election fraud."
      }
    ]; %>

    <% flaggedNews.forEach(news => { %>
      <div class="verdict-card">
        <img src="<%= news.image %>" alt="<%= news.title %>">
        <div class="card-body">
          <h3><%= news.title %></h3>
          <p>
            <strong style="color:#DC2626;"><%= news.verdict %></strong> â€” 
            <%= news.explanation %>
          </p>
        </div>
      </div>
    <% }) %>
  </div>
</section>

