<%- include('partials/header', { title: 'Home', isAuthenticated: isAuthenticated }) %>

<section class="hero" id="home">
  <h1>Expose the Fake. Trust the Real.</h1>
</section>

<section class="main-verification">
  <h2 class="verify-text">Paste a news article or URL to check its authenticity</h2>

  <div class="search-box">

    <!-- NEWS INPUT -->
    <input 
      type="text" 
      id="newsInput" 
      placeholder="Paste a news article or URL to check its authenticity"
    />

    <!-- CHECK BUTTON -->
    <button id="checkButton">Check</button>

    <!-- CLEAR BUTTON -->
    <button id="clearButton" class="clear-btn">Clear</button>

    <!-- LOADER -->
    <div id="loader" class="loader" style="display:none;"></div>

    <!-- VERDICT MESSAGE -->
    <p id="verdictMessage"></p>

    <!-- CREDIBILITY SCORE UI -->
    <div id="credibilityScore" class="credibility-score"></div>
  </div>
</section>

